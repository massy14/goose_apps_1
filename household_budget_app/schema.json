{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Household Budget App Schema",
  "description": "Schema for the household budget tracking application",
  "type": "object",
  "properties": {
    "budgetItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the budget item"
          },
          "type": {
            "type": "string",
            "enum": ["expense", "income"],
            "description": "Type of transaction (expense or income)"
          },
          "amount": {
            "type": "number",
            "description": "Amount of money for the transaction"
          },
          "category": {
            "type": "string",
            "description": "Category for expenses (e.g., Food, Housing, Transportation)"
          },
          "source": {
            "type": "string",
            "description": "Source of income (e.g., Salary, Bonus, Investment)"
          },
          "description": {
            "type": "string",
            "description": "Description of the transaction"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date of the transaction in YYYY-MM-DD format"
          }
        },
        "required": ["id", "type", "amount", "date"],
        "allOf": [
          {
            "if": {
              "properties": { "type": { "const": "expense" } }
            },
            "then": {
              "required": ["category"]
            }
          },
          {
            "if": {
              "properties": { "type": { "const": "income" } }
            },
            "then": {
              "required": ["source"]
            }
          }
        ]
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of expense categories"
    },
    "settings": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string",
          "description": "Currency code (e.g., USD, EUR, JPY)"
        }
      },
      "required": ["currency"]
    }
  }
}